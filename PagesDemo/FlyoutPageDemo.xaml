<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PagesDemo.FlyoutPageDemo"
             Title="FlyoutPageDemo" 
            FlyoutLayoutBehavior="Default">
    <FlyoutPage.Flyout>
        <ContentPage BackgroundColor="DarkBlue" Title="Menu">
            <Label Text="Hello from flyout" 
                   HorizontalOptions="Center"
                   FontSize="34"
                   VerticalTextAlignment="Center" />
        </ContentPage>
    </FlyoutPage.Flyout>
    <FlyoutPage.Detail>
        <ContentPage Title="My App" BackgroundColor="DarkRed">
                <Label Text="Hello from detail" 
                       HorizontalOptions="Center"
                       FontSize="34"
                       VerticalTextAlignment="Center" />
        </ContentPage>
    </FlyoutPage.Detail>
</FlyoutPage>