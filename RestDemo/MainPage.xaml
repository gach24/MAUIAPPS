<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestDemo.MainPage">
    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
        <Button Text="Get All Users" Command="{Binding GetAllUserCommand}" />
        <Button Text="Get Single User" Command="{Binding GetSingleUserCommand}" />
        <Button Text="Add User" Command="{Binding AddUserCommand}" />
        <Button Text="Update User" Command="{Binding UpdateUserCommand}" />
        <Button Text="Delete User" Command="{Binding DeleteUserCommand}" />
    </VerticalStackLayout>

</ContentPage>
